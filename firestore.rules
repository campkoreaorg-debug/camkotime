
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isVenueOwner(venueId) {
      return request.auth != null && get(/databases/$(database)/documents/venues/$(venueId)).data.ownerId == request.auth.uid;
    }

    match /venues/{venueId} {
      allow get, list: if true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isVenueOwner(venueId);

      match /staff/{staffId} {
        allow get, list: if true;
        allow create, update, delete: if isVenueOwner(venueId);
      }

      match /schedules/{scheduleId} {
        allow get, list: if true;
        allow create, update, delete: if isVenueOwner(venueId);
      }
      
       match /markers/{markerId} {
        allow get, list: if true;
        allow create, update, delete: if isVenueOwner(venueId);
      }
       
       match /maps/{mapId} {
        allow get, list: if true;
        allow create, update, delete: if isVenueOwner(venueId);
      }
      
      match /externalDevices/{deviceId} {
        allow get, list: if true;
        allow create, update, delete: if isVenueOwner(venueId);
      }

       match /roles/{roleId} {
        allow get, list: if true;
        allow create, update, delete: if isVenueOwner(venueId);
      }
      
      match /categories/{categoryId} {
        allow get, list: if true;
        allow create, update, delete: if isVenueOwner(venueId);
      }

      // Allow venue owners to manage schedule templates
      match /scheduleTemplates/{templateId} {
        allow get, list: if true;
        allow create, update, delete: if isVenueOwner(venueId);
      }
    }
  }
}
