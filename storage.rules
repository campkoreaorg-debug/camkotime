
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 모든 파일에 대한 기본 규칙
    match /{allPaths=**} {
      // 인증된 사용자만 파일을 업로드, 수정, 삭제할 수 있습니다.
      allow write: if request.auth != null;
      
      // 누구나 파일을 읽을 수 있습니다.
      // 대부분의 앱에서 이미지는 공개적으로 보여져야 하므로 일반적인 설정입니다.
      allow read;
    }
  }
}
